<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.seenmovies"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="7" />

    <application android:label="@string/app_name" 
    			 android:icon="@drawable/seenmovies_icon">
        
        <activity android:name=".SeenMoviesActivity"
                  android:label="@string/app_name"
                  android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<activity 
		    android:name=".RegisterMovieActivity" 
		   	android:configChanges="orientation|keyboardHidden"
		    android:theme="@style/AppTheme">
		</activity>
		<activity 
		    android:name=".MyMoviesListActivity" 
		    android:configChanges="orientation|keyboardHidden"
		    android:theme="@style/AppTheme">
		    
		</activity>
		<activity 
		    android:name=".AboutActivity"
		    android:theme="@style/AppTheme">
		</activity>
		<activity 
		    android:name=".MovieInfoActivity" 
		    android:configChanges="orientation|keyboardHidden"
		    android:theme="@style/AppTheme">
		</activity>
		<activity 
		    android:name=".GeneralSettingActivity" 
		    android:label="@string/settings" 
		    android:theme="@style/AppTheme">
		</activity>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>